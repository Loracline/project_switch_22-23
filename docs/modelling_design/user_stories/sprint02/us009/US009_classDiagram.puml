}

class "AccountContainer"{
-accounts
+getAccountByEmail(email)
+validateAdministrator(email)
}

class "Account"{
-email
- profile
+isAdministrator()
}

class "CustomerContainer"{
-customers
+addCustomer(customerName)
-doesCustomerExist(customerName)
}

class "Customer"{
-customerName
+Customer(customerName)
}

