@startuml
'https://plantuml.com/sequence-diagram

autonumber

skinparam sequenceMessageAlign center
title TO LIST ALL PROJECTS
legend top
US015 - As a Manager, I want to get a list of all projects
end legend
autonumber
actor Manager
participant ":SomeUI" as ui
participant ":SomeController" as controller
participant ":Company" as company
participant ":AccountContainer" as ac
participant "account:Account" as a
participant "profile:Profile" as p

activate Manager
Manager -> ui: doSomething
activate ui
ui -> controller: doSomething(email)
activate controller
controller -> company: validateManager(email)
activate company
company -> ac: validateManager(email)
activate ac
ac -> a: checkAccountfromEmail(email)
activate a
a-->>ac: true
ac -> a: isManager()
a-> p: isManager()
activate p
p-->> a:true
deactivate p
a -->> ac: true
deactivate a
ac -->> company: true
deactivate ac
company-->> controller: true
@enduml